#update zshrc
alias zu='source ~/.dotfiles/zsh/.zshrc'
#alias zu='source ~/dotfiles/zsh/.zshrc'

#ls for macOS
alias ls='ls -GF'
alias la='ls -aGF'
alias ll='ls -alGF'

#mkdir
alias mkdir='mkdir -p'

#brew
alias bi='brew install'
alias bui='brew uninstall'
alias bup='brew update'

#git
alias gc='git clone'

#nvim
alias vi='nvim'
alias vim='nvim'

#python
alias py='python'
alias py3='python3'

#global
alias -g L='| less'
alias -g G='| grep'
